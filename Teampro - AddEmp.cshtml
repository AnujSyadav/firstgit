@model TeamProMvc.Models.EmpMvcModel
@{
    ViewBag.Title = "AddEmp";
}


<style>
    body {
        background-color:#f6f2a6
    }

    .anuj {
        color: #f4d9d9
    }

    .anuj1 {
        color: #ff0000
    }
</style>

@if (Session["Check"] == "Add")
{
    <h1>Add Employee</h1>
}
else
{
    <h1>Edit Employee</h1>
}


@using (Html.BeginForm("AddEmp", "EmpMvc", FormMethod.Post))
{
    @Html.HiddenFor(m => m.eid)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.ename, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ename, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>Designation</label>
        @Html.TextBoxFor(m => m.edesig, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.edesig, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>DOB</label>
        @Html.TextBoxFor(m => m.Dob, "{0:yyyy-MM-dd}", new { type = "date" })
        @Html.ValidationMessageFor(m => m.Dob, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>Address ID</label>
        @Html.TextBoxFor(m => m.Adid, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Adid, "", new { @class = "anuj1" })
    </div>


    <div class="form-group">
        <label>House No</label>
        @Html.TextBoxFor(m => m.Hno, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Hno, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>Building</label>
        @Html.TextBoxFor(m => m.Build, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Build, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>Zipcode</label>
        @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Zipcode, "", new { @class = "anuj1" })
    </div>

    if (Session["Check"] == "Add")
    {
        <div class="form-group">
            <label>Technology</label>
            @Html.DropDownListFor(m => m.tid, ViewBag.list as SelectList, "--Select Tech--", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.tid, "", new { @class = "anuj1" })
        </div>
    }

    else
    {
        @Html.HiddenFor(m => m.tid)
        <div class="form-group">
            <label>Technology</label>
            @Html.DropDownListFor(m => m.tname, ViewBag.list as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.tname, "", new { @class = "anuj1" })
        </div>
    }

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.email, "", new { @class = "anuj1" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(m => m.pass, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.pass, "", new { @class = "anuj1" })
    </div>


    <div class="form-group">
        <label>Languages</label>

        @if (Session["Check"] == "Edit")

        {
            if (Model.l1 == "L001")
            {
                <label class="checkbox-inline">
                    @Html.CheckBox("H", true)
                    Hindi
                </label>
            }
            else
            {

                <label class="checkbox-inline">
                    @Html.CheckBox("H", false)
                    Hindi
                </label>
            }

            if (Model.l2 == "L002")
            {
                <label class="checkbox-inline">
                    @Html.CheckBox("E", true)
                    English
                </label>
            }
            else
            {<label class="checkbox-inline">
                    @Html.CheckBox("E", false)
                    English
                </label>
            }

            if (Model.l3 == "L003")
            {
                <label class="checkbox-inline">
                    @Html.CheckBox("F", true)
                    French
                </label>
            }
            else
            {<label class="checkbox-inline">
                    @Html.CheckBox("F", false)
                    French
                </label>
            }
            if (Model.l4 == "L004")
            {
                <label class="checkbox-inline">
                    @Html.CheckBox("G", true)
                    Germi
                </label>
            }
            else
            {
                <label class="checkbox-inline">
                    @Html.CheckBox("G", false)
                    Germi
                </label>
            }

        }
        else
        {
            <label class="checkbox-inline">
                @Html.CheckBox("H", false)
                Hindi
            </label>
            <label class="checkbox-inline">
                @Html.CheckBox("E", false)
                English
            </label>
            <label class="checkbox-inline">
                @Html.CheckBox("F", false)
                French
            </label>
            <label class="checkbox-inline">
                @Html.CheckBox("G", false)
                Germi
            </label>

        }

    </div>
            if (Session["Check"] == "Edit")
                {
                    <button class="btn btn-success" type="submit">Update</button>
                   }
        else
            {
                <button class="btn btn-success" type="submit">Submit</button>
            }
 }


